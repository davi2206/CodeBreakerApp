<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppBaseTheme" parent="android:Theme.Holo">
    <!--Overall styles here.. -->
  </style>

  <style name="AppTheme" parent="AppBaseTheme">
    
    <item name="android:windowBackground">@color/custBackGround</item>
    <item name="android:buttonStyle">@style/MyButton</item>
    <item name="android:editTextStyle">@style/MyEditText</item>
    <item name="android:textViewStyle">@style/MyTextView</item>
  </style>

  <!--Button-->
  <style name="MyButton" parent="android:Widget.Material.Button">
    <item name="android:background">@drawable/btn_pressed_prim</item>
    <item name="android:textColor">@color/custBtnTxtColor</item>
    <item name="android:textSize">15sp</item>
  </style>

  <!--EditText-->
  <style name="MyEditText" parent="android:Widget.Material.EditText">
    <item name="android:background">@color/custBackGroundSec</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="android:layout_marginTop">200sp</item>
    <item name="android:padding">2sp</item>
  </style>

  <!--TextView-->
  <style name="MyTextView" parent="android:Widget.Material.TextView">
    <!--<item name="android:background">@drawable/btn_pressed</item>-->
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">20sp</item>
  </style>

  <!--Actionbar-->
  <style name="MyActionBar" parent="android:Widget.Material.ActionBar">
    <item name="android:textSize">250sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <!--<item name="android:textSize">25sp</item>-->
  </style>
</resources>